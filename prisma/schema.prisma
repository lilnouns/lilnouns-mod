// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  output          = "../src/generated/prisma"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Account {
  address   String  @id // ETH address, normalized lowercase
  fid       Int? // Farcaster ID
  fname     String? // Farcaster handle
  ens       String? // ENS name
  pfpUrl    String? // profile picture URL
  updatedAt Int // unix epoch seconds

  @@index([fid])
  @@index([fname])
  @@index([ens])
}
